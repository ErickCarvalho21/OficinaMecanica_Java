<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane style="-fx-background-color: linear-gradient(to bottom right, #667eea, #764ba2);" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.LoginController">

    <VBox alignment="CENTER" maxHeight="550" maxWidth="400" spacing="20" style="-fx-background-color: white; -fx-background-radius: 20; -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.3), 30, 0, 0, 10);">
        <padding>
            <Insets bottom="40" left="40" right="40" top="40" />
        </padding>

        <Label style="-fx-text-fill: #333333;" text="Bem-vindo">
            <font>
                <Font name="System Bold" size="32" />
            </font>
        </Label>

        <Label style="-fx-text-fill: #666666;" text="FaÃ§a login para continuar">
            <font>
                <Font size="14" />
            </font>
        </Label>

        <VBox spacing="8">
            <Label style="-fx-text-fill: #333333;" text="Email">
                <font>
                    <Font name="System Bold" size="13" />
                </font>
            </Label>
            <TextField fx:id="emailDoLogin" prefHeight="45" promptText="Digite seu e-mail" style="-fx-background-color: #f5f5f5; -fx-background-radius: 10; -fx-border-radius: 10; -fx-padding: 0 15 0 15; -fx-font-size: 14px; -fx-border-color: transparent;" />
        </VBox>

        <VBox spacing="8">
            <Label style="-fx-text-fill: #333333;" text="Senha">
                <font>
                    <Font name="System Bold" size="13" />
                </font>
            </Label>
            <PasswordField fx:id="senhaDoLogin" prefHeight="45" promptText="Digite sua senha" style="-fx-background-color: #f5f5f5; -fx-background-radius: 10; -fx-border-radius: 10; -fx-padding: 0 15 0 15; -fx-font-size: 14px; -fx-border-color: transparent;" />
        </VBox>

        <Button fx:id="botaoLogin" maxWidth="Infinity" onAction="#fazerLogin" prefHeight="45" style="-fx-background-color: linear-gradient(to right, #667eea, #764ba2); -fx-text-fill: white; -fx-background-radius: 25; -fx-cursor: hand; -fx-border-width: 0;" text="ENTRAR">
            <font>
                <Font name="System Bold" size="14" />
            </font>
        </Button>

        <HBox alignment="CENTER" spacing="5" />
    </VBox>

</StackPane>
