<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="Controller.PainelController" >

    <top>
        <VBox style="-fx-background-color: #2c3e50;">
            <MenuBar style="-fx-background-color: #2c3e50;">
                <Menu text="Arquivo">
                    <MenuItem text="Novo" />
                    <MenuItem text="Abrir"/>
                    <SeparatorMenuItem/>
                    <MenuItem text="Sair"/>
                </Menu>
                <Menu text="Editar">
                    <MenuItem text="Adicionar" />
                    <MenuItem text="Editar" />
                    <MenuItem text="Excluir" />
                </Menu>
                <Menu text="Relatórios">
                    <MenuItem text="Gerar Relatório" />
                    <MenuItem text="Exportar Dados"/>
                </Menu>
                <Menu text="Ajuda">
                    <MenuItem text="Documentação" />
                    <MenuItem text="Sobre" />
                </Menu>
            </MenuBar>

            <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-background-color: #34495e; -fx-padding: 15;">
                <Label text="Painel Administrativo" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="20.0"/>
                    </font>
                </Label>
                <Region HBox.hgrow="ALWAYS"/>
                <Label fx:id="lblUsuario" text="Admin" textFill="WHITE">
                    <font>
                        <Font size="14.0"/>
                    </font>
                </Label>
                <Button text="Sair"  style="-fx-background-color: #e74c3c; -fx-text-fill: white;"/>
            </HBox>
        </VBox>
    </top>

    <left>
        <VBox spacing="5" style="-fx-background-color: #ecf0f1; -fx-padding: 10;" prefWidth="200.0">
            <Label text="Menu" style="-fx-font-weight: bold; -fx-font-size: 16;">
                <padding>
                    <Insets bottom="10.0"/>
                </padding>
            </Label>

            <Button text="Dashboard"  maxWidth="Infinity"
                    style="-fx-background-color: #3498db; -fx-text-fill: white;" prefHeight="40.0"/>
            <Button text="Clientes"  maxWidth="Infinity"
                    style="-fx-background-color: #95a5a6; -fx-text-fill: white;" prefHeight="40.0"/>
            <Button text="Produtos"  maxWidth="Infinity"
                    style="-fx-background-color: #95a5a6; -fx-text-fill: white;" prefHeight="40.0"/>
            <Button text="Vendas"  maxWidth="Infinity"
                    style="-fx-background-color: #95a5a6; -fx-text-fill: white;" prefHeight="40.0"/>
            <Button text="Relatórios"  maxWidth="Infinity"
                    style="-fx-background-color: #95a5a6; -fx-text-fill: white;" prefHeight="40.0"/>
            <Button text="Configurações" maxWidth="Infinity"
                    style="-fx-background-color: #95a5a6; -fx-text-fill: white;" prefHeight="40.0"/>

            <Region VBox.vgrow="ALWAYS"/>

            <Separator/>
            <Label text="Estatísticas Rápidas" style="-fx-font-weight: bold;">
                <padding>
                    <Insets top="10.0" bottom="5.0"/>
                </padding>
            </Label>
            <Label fx:id="lblTotalUsuarios" text="Usuários: 0"/>
            <Label fx:id="lblTotalProdutos" text="Produtos: 0"/>
            <Label fx:id="lblVendasHoje" text="Vendas Hoje: 0"/>
        </VBox>
    </left>

    <center>
        <VBox spacing="15" style="-fx-background-color: white; -fx-padding: 20;">

            <!-- Barra de Ferramentas -->
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Button text="Adicionar"
                        style="-fx-background-color: #27ae60; -fx-text-fill: white;"/>
                <Button text="Editar"
                        style="-fx-background-color: #f39c12; -fx-text-fill: white;"/>
                <Button text="Excluir"
                        style="-fx-background-color: #e74c3c; -fx-text-fill: white;"/>
                <Separator orientation="VERTICAL"/>
                <TextField fx:id="txtBusca" promptText="Buscar..." prefWidth="250.0"/>
                <Button text="Buscar"
                        style="-fx-background-color: #3498db; -fx-text-fill: white;"/>
                <Button text="Limpar" />
            </HBox>

            <!-- Tabela de Dados -->
            <TableView fx:id="tabelaDados" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="colId" text="ID" prefWidth="50.0"/>
                    <TableColumn fx:id="colNome" text="Nome" prefWidth="200.0"/>
                    <TableColumn fx:id="colEmail" text="Email" prefWidth="200.0"/>
                    <TableColumn fx:id="colTipo" text="Tipo" prefWidth="100.0"/>
                    <TableColumn fx:id="colStatus" text="Status" prefWidth="100.0"/>
                    <TableColumn fx:id="colDataCriacao" text="Data Criação" prefWidth="150.0"/>
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                </columnResizePolicy>
            </TableView>
        </VBox>
    </center>

    <bottom>
        <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-background-color: #34495e; -fx-padding: 10;">
            <Label fx:id="lblStatus" text="Pronto" textFill="WHITE"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Label fx:id="lblDataHora" text="13/11/2025 10:30" textFill="WHITE"/>
        </HBox>
    </bottom>

</BorderPane>