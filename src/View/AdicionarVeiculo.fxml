<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.AdicionarVeiculoController">

    <top>
        <VBox style="-fx-background-color: #2c3e50;">
            <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-background-color: #34495e; -fx-padding: 15;">
                <Button onAction="#voltarParaPainel" style="-fx-background-color: #95a5a6; -fx-text-fill: white;" text="← Voltar" />
                <Label text="Adicionar Veículo" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="20.0" />
                    </font>
                </Label>
            </HBox>
        </VBox>
    </top>

    <center>
        <VBox alignment="TOP_CENTER" spacing="20" style="-fx-background-color: white; -fx-padding: 40;">

            <VBox maxWidth="600.0" spacing="20" style="-fx-background-color: #ecf0f1; -fx-padding: 30; -fx-background-radius: 10;">

                <Label style="-fx-font-weight: bold; -fx-font-size: 18;" text="Informações do Veículo">
                    <padding>
                        <Insets bottom="10.0" />
                    </padding>
                </Label>

                <VBox spacing="5">
                    <Label style="-fx-font-weight: bold;" text="Placa:" />
                    <TextField fx:id="txtPlaca" promptText="ABC1234" style="-fx-font-size: 14; -fx-padding: 10;" />
                </VBox>

                <VBox spacing="5">
                    <Label style="-fx-font-weight: bold;" text="Modelo:" />
                    <TextField fx:id="txtModelo" promptText="Ex: Honda Civic" style="-fx-font-size: 14; -fx-padding: 10;" />
                </VBox>

                <VBox spacing="5">
                    <Label style="-fx-font-weight: bold;" text="Ano:" />
                    <TextField fx:id="txtAno" promptText="2020" style="-fx-font-size: 14; -fx-padding: 10;" />
                </VBox>

                <VBox spacing="5">
                    <Label style="-fx-font-weight: bold;" text="Proprietário:" />
                    <ComboBox fx:id="comboClientes" prefWidth="540.0" promptText="Selecione o cliente" style="-fx-font-size: 14;" />
                </VBox>

                <HBox alignment="CENTER" spacing="15" style="-fx-padding: 20 0 0 0;">
                    <Button onAction="#salvarVeiculo" prefWidth="120.0" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-size: 14; -fx-padding: 10;" text="Salvar" />
                </HBox>

                <Label fx:id="lblMensagem" alignment="CENTER" style="-fx-font-weight: bold; -fx-font-size: 14;" textFill="#e74c3c">
                    <padding>
                        <Insets top="10.0" />
                    </padding>
                </Label>

            </VBox>

        </VBox>
    </center>

</BorderPane>
